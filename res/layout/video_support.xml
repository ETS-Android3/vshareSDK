<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loved_and_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|left"
    android:minHeight="26dp"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:indeterminateDrawable="@anim/update_loading_progressbar_anim"
        android:visibility="visible" />

    <TextView
        android:id="@+id/load_error"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical|left"
        android:text="点击重新加载"
        android:textSize="14sp"
        android:visibility="gone" />

    <View
        android:id="@+id/loved_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:alpha="0.6"
        android:background="@drawable/btn_support" />

    <TextView
        android:id="@+id/loved_total"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="4dp"
        android:alpha="0.6"
        android:gravity="center_vertical|left"
        android:text="+赞"
        android:textSize="12sp" />

    <GridLayout
        android:id="@+id/loved_list"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1" >
    </GridLayout>

    <TextView
        android:id="@+id/has_more"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="4dp"
        android:alpha="0.6"
        android:gravity="center_vertical|left"
        android:text="..."
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>