<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/father"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <RelativeLayout
        android:id="@+id/preivew_001"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:focusable="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <Button
            android:id="@+id/preview_cancel"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_recorder_cancel"
            android:text="返回"
            android:textColor="#bbbbbb"
            android:textSize="14sp" />

        <Button
            android:id="@+id/preview_next"
            android:layout_width="66dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_recorder_next"
            android:text="上传"
            android:textColor="#444444"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_below="@id/preivew_001" >

        <RelativeLayout
            android:id="@+id/preview_video_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true" >
        </RelativeLayout>

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/preview_video_parent"
            android:background="#88000000"
            android:focusable="false"
            android:gravity="top"
            android:hint="点击留个心情、写点啥吧！"
            android:inputType="text"
            android:paddingBottom="12dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="12dp"
            android:singleLine="true"
            android:textColor="#FFF"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_alignTop="@id/title"
            android:layout_alignLeft="@id/title"
            android:scaleType="centerInside"
            android:src="@drawable/btn_lightgreen_bg" />
    </RelativeLayout>

</RelativeLayout>